set -eu
#set -x

if echo "$0" | grep -q ++; then
  exe=g++
else
  exe=gcc
fi

ROOT=$(dirname $0)/..

# Why is libtooling interface so useless...
FILES=$(echo "$@" | grep -o '[^ ]\+\.\(cc\|cpp\|c\|cxx\|C\)\( \|$\)' || true)
OPTS=$(echo "$@" | sed -e 's/[^ ]\+\.\(cc\|cpp\|c\|cxx\|C\)\( \|$\)//g')

if test -n "$FILES" && ! (echo -- "$OPTS" | grep -q -- '-E\>'); then
  # TODO: strip unhandled flags (-ftree-XXX/-fno-tree-XXX, --lto, etc.)
  $ROOT/bin/SortChecker $FILES -- $OPTS -w
fi
/usr/bin/$exe "$@" -I$ROOT/include
